{
  "name": "image-manipulator",
  "version": "2.0.0",
  "description": "Desktop app for bulk image rotation with OCR capabilities",
  "main": "electron-main.js",
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  },
  "scripts": {
    "start": "electron .",
    "server": "node server.js",
    "dev": "NODE_ENV=development electron .",
    "build": "electron-builder",
    "build:win": "electron-builder --win",
    "build:mac": "electron-builder --mac",
    "build:linux": "electron-builder --linux"
  },
  "keywords": [
    "image",
    "rotation",
    "thumbnails",
    "bulk",
    "photo"
  ],
  "author": "Claude Assistant",
  "license": "MIT",
  "dependencies": {
    "dotenv": "^16.4.5",
    "express": "^4.18.2",
    "fs": "^0.0.1-security",
    "multer": "^1.4.5-lts.1",
    "node-fetch": "^2.7.0",
    "path": "^0.12.7",
    "sharp": "^0.34.2"
  },
  "devDependencies": {
    "electron": "^39.1.0",
    "electron-builder": "^26.0.12",
    "nodemon": "^3.0.2"
  },
  "build": {
    "appId": "com.imagemanipulator.app",
    "productName": "Image Rotator",
    "directories": {
      "output": "dist"
    },
    "files": [
      "electron-main.js",
      "electron-preload.js",
      "server.js",
      "server-ocr.js",
      "public/**/*",
      "node_modules/**/*",
      "package.json"
    ],
    "win": {
      "target": ["nsis", "portable"],
      "icon": "public/favicon.ico"
    },
    "mac": {
      "target": ["dmg", "zip"],
      "category": "public.app-category.productivity"
    },
    "linux": {
      "target": ["AppImage", "deb"],
      "category": "Graphics"
    }
  }
}
